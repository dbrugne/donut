#!/usr/bin/env node
var debug = require('debug')('chat-server');
var appServer = require('../app');

var http = require('../http');
var ws = require('../ws');

appServer.app.set('port', process.env.PORT || 3000);

var server = appServer.app.listen(appServer.app.get('port'), function() {
  debug('Express server listening on port ' + server.address().port);
});

// go websockets
var io = require('socket.io')(server, {}); // transports: ['websocket', 'flashsocket', 'xhr-polling', 'jsonp-polling', 'polling']
/**
 * ['websocket',
 * 'flashsocket',
 * 'htmlfile',
 * 'xhr-polling',
 * 'jsonp-polling',
 * 'polling']
 */
var redis = require('socket.io-redis');
io.adapter(redis({ host: 'localhost', port: 6379 }));
require('../app/socket')(appServer.app, io, appServer.passport, appServer.sessionStore);