#!/usr/bin/env node
var debug = require('debug')('chat-server');
var appServer = require('../app');

appServer.app.set('port', process.env.PORT || 80);

var server = appServer.app.listen(appServer.app.get('port'), function() {
  debug('Express server listening on port ' + server.address().port);
});

// go websockets
var io = require('socket.io').listen(server);
require('../app/socket')(appServer.app, io, appServer.passport, appServer.sessionStore);